!! title Rtn Cv.Hash ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=				Rtn Cv.Hash				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  integer procedure Cv.Hash (string PW);
  begin "Cv.Hash"
    integer C;
    integer Fives;
    integer T1;
    integer T2;
    integer T3;
    integer T4;
    integer array X[0:4];


    X[0]  _ X[2] _ X[4] _ '555555555555;
    X[1]  _ X[3] _ '361275431652;
    Fives _ '343277244615;
    T3    _ 0;

    while (length(PW)) do
    begin "PSWLP"
      C    _ lop(PW);
      inc(X[0], C);
      inc(X[3], C);
      T4   _ '40;

      do
      begin "RAND"
	T1 _ X[T3];

	start!code
	  MOVE	1, T1;
	  MUL	1, Fives;
	  MOVEM	1, T1;
	  MOVEM	2, T2;
	end;

	inc(T3);
	inc(X[T3], T2);

	if (T3 = 4) then
	begin
	  T3   _ X[4] lsh -'42;
	  inc(X[0], X[4]);
	end;
      end "RAND"
      until ((dcr(T4)) <= 0);
    end "PSWLP";

    return(X[0]);
  end "Cv.Hash";


