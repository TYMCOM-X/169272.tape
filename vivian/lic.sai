!! title Rtn Set.Lic ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=				Rtn Set.Lic				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


	set license stuff (ech):
	Set.Lic(license)


==========================================================================;


  internal simple procedure Set.Lic (integer Lic);
  begin "Set.Lic"
    if (calli(-'25, '41) = calli(-'23, '41)) then
      calli(Lic, -'10);
  end "Set.Lic";


